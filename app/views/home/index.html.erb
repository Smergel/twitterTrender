<html>
<head>
	<title>Home</title>
</head>
<body>
		<% if current_user.nil? %>
			<%= render 'login' %>
		<% end %>
	<div id="header">
		<div class="center">
			<%= image_tag("bunny.gif") %>
			<h2>See what's happening right now</h2><br />
			<h5>News from your community</h5>
		</div>
	</div>
	<% if !@user.nil? %>
		<div id="update_form"><%= render 'form_update' %></div>
	<% end %>
	<div id="navBar">
		<div class="center">
			<ul>
				<li class="logo"><em>Trender</em></li>
				<li class="buttons"><button id="update_cities">Update Cities</button></li>
			</ul>
			<% if !current_user.nil? %>
				<%= render 'logout' %>
			<% end %>
			<% if flash[:notice] %>
        <div class="login-notice"><%= flash[:notice] %></div>
      <% end %>
		</div>
	</div>
	<div class="feeder">
		<div class="center">
			
			<% @woeid.each do |x| %>
				<div class="feeds">
					<span class="city_name"><%= x.city_name %></span><br />
				    <% @feed.each do |x| %>
					    <ul class="trend_names">
					    	<li><%= x[:name] %></li>
					    </ul>
				    <% end %>
				</div>
			<% end %>
			
		</div>
	</div>
	<div id="footer">
		<% if current_user.nil? %>
			<div id="login_form"><%= render 'login' %></div>
		<% end %>
	</div>
</body>
</html>