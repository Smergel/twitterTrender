<html>
<head>
	<title>Home</title>
</head>
<body>
	<% if current_user.nil? %>
		<div id="login_form"><%= render 'login' %></div>
	<% end %>
	<div id="header">
		<div class="center">
			<%= image_tag("bunny.gif") %>
			<h2>See what's happening right now</h2><br />
			<h5>News from your community</h5>
		</div>
	</div>
		<% if !@user.nil? %>
			<div id="update_form">
				<%= render 'form_update' %>
		</div>
		<% end %>
	<div id="navBar">
		<div class="center">
			<ul>
				<% if !@user.nil? %>
					<li class="logo"><div class="login-notice"><%= flash[:notice] %></div></li>
					<li class="buttons"><div id="update_cities">Update Cities</div></li>
					<li class="buttons"><%= link_to 'Log Out', log_out_path %></li>
				<% end %>
			</ul>
   		</div>
	</div>
	<div class="feeder">
		<div class="center">
			
			<% @woeid.each do |x| %>
				<div class="feeds">
					<span class="city_name"><%= x.city_name %></span><br />
				    <% @feed.each do |x| %>
					    <div class="ul_center">
						    <ul class="trend_names">
						    	<li><%= x[:name] %></li>
						    </ul>
						</div>
				    <% end %>
				</div>
			<% end %>
			
		</div>
	</div>
	<div id="footer">
		<p>
			twitterTrender was built using Twitter's "REST" api.
		</p>
	</div>
</body>
</html>