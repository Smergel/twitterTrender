<div id="header">
  <a href="/">
    <div class="center">
      <%= image_tag("bunny.gif") %>
      <h2>See what's happening right now</h2>
    </div>
    </a>
    
</div>

<div class="new-user-form-wrapper">
  <div class="new-user-form">
    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being updated:</h2>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <div class="form-title">
          User Name
        </div>
        <%= f.text_field :user_name, :id=> "user_name"%>
      </div>
      <div class="field">
        <div class="form-title">
          Email
        </div>
        <%= f.text_field :email  %>
      </div>
      <div class="field">
        <div class="form-title">
          Password
        </div>
        <%= f.password_field :password %>
      </div>
      <div class="field">
        <div class="form-title">
          Password Confirmation
        </div>
        <%= f.password_field :password_confirmation %>
      </div>
      <div class="selector-wrapper" id="selector-wrapper1">
        <%= select(:user, :location1, @location.collect { |l| [l.city_name, l.id] }, {prompt: 'City to Follow'}, :class => "city-to-follow") %>
      </div>
      <div class="selector-wrapper">
        <%= select(:user, :location2, @location.collect { |l| [l.city_name, l.id] }, {prompt: 'City to Follow'}, :class => "city-to-follow") %>
      </div>
      <div class="selector-wrapper">
        <%= select(:user, :location3, @location.collect { |l| [l.city_name, l.id] }, {prompt: 'City to Follow'}, :class => "city-to-follow") %>
      </div>
      <%= f.submit :id=> "submit-button" %>
    <% end %>
  </div>
</div>
